{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Picgo.MD",
  "version": "0.1.0",
  "identifier": "com.picgomd.desktop",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../picgomd-web -- --host 127.0.0.1 --port 3000",
    "devUrl": "http://127.0.0.1:3000",
    "beforeBuildCommand": "npm run build --prefix ../picgomd-web",
    "frontendDist": "../../picgomd-web/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Picgo.MD",
        "width": 1200,
        "height": 800,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "./bin/picgomd-backend"
    ],
    "icon": [
      "../../icons/app_icon.ico",
      "../../picgomd-web/public/maoer.png",
      "../../icons/windows/icon_256x256.png",
      "../../icons/windows/icon_128x128.png",
      "../../icons/windows/icon_64x64.png",
      "../../icons/windows/icon_48x48.png",
      "../../icons/windows/icon_32x32.png",
      "../../icons/windows/icon_16x16.png"
    ]
  }
}